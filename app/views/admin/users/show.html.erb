<% if can? :read, @user %>
  <div class="row">
    <aside class="col-md-5">
      <section>
        <h1>
          <%= link_to image_tag(@user.image.url, size: Settings.image_user),
            @user %>
          <%= @user.name %>
        </h1>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <%= render "follow_form" unless current_user.is_admin? %>
    </aside>
    <aside class="col-md-5 activity">
      <h3><%= t "activities.title" %></h3>
      <div class="span2 row">
      </div>
    </aside>
  </div>
<% end %>
