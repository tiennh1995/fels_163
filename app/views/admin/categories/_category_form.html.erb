<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for [:admin, @category] do |f| %>
      <%= render "shared/error_messages", object: @category %>
      <%= f.label t "category.name" %>
      <%= f.text_field :name, placeholder: t("category.newname"),
        class: "form-control" %>
      <%= f.submit t(:create), class: "btn btn-primary create" %>
    <% end %>
  </div>
</div>
