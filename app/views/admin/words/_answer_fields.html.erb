<fieldset class="col-md-6 word_answer">
  <%= f.label :title, t("answer.title") %>
  <li class="input-group">
    <span class="input-group-addon dn-admin-addon">
    <%= f.check_box :is_correct, class: "chb dn-admin-wordanswer-check" %>
    </span>
    <%= f.text_field :title, class: "form-control",
      placeholder: t(:check_sure) %>
  </li>
  <%= f.hidden_field :_destroy %>
  <%= link_to "#", class: "remove_fields" do %>
    <span class='glyphicon glyphicon-minus small'></span>
  <% end %>
</fieldset>
