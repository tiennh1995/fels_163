<header class="navbar navbar-fixed-top navbar-inverse header">
  <div class="container">
    <%= link_to t("layouts.header.title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to t("layouts.header.home"), root_path, class: "logo" %>
          </li>
          <li><%= link_to t("layouts.header.category"),
            categories_path, class: "logo" %></li>
          <li>
            <%= link_to t("layouts.header.words"), words_path, class: "logo" %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle logo" data-toggle="dropdown">
              <%= current_user.name %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts.header.activity"),
                user_activities_path(current_user) %>
              </li>
              <li><%= link_to t("layouts.header.lessons"),
                user_lessons_path(current_user) %></li>
              <li><%= link_to t("layouts.header.users"), users_path %></li>
              <li class="divider"></li>
              <li><%= link_to t("layouts.header.profile"),
                user_path(current_user) %></li>
              <li><%= link_to t("layouts.header.setting"),
                edit_user_registration_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to t("layouts.header.logout"),
                destroy_user_session_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t("layouts.header.login"), new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
