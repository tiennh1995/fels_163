<aside class="main-sidebar">
  <section class="sidebar">
    <ul class="sidebar-menu">
      <li class="active">
        <%= link_to admin_root_path do %>
          <i class="glyphicon glyphicon-dashboard"></i>
          <span><%= t "admin.dashbord" %></span>
        <% end %>
      </li>

      <li>
        <%= link_to admin_users_path do %>
          <i class="glyphicon glyphicon-user"></i>
          <span><%= t :show_user %></span>
        <% end %>
      </li>

      <li class="treeview">
        <a href="#">
          <i class="glyphicon glyphicon-tasks"></i>
          <span><%= t "admin.category" %></span>
          <i class="glyphicon glyphicon-chevron-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li><%= link_to t(:index), admin_categories_path %></li>
          <li><%= link_to t(:create), new_admin_category_path %></li>
        </ul>
      </li>

      <li class="treeview">
        <a href="#">
          <i class="glyphicon glyphicon-list-alt"></i>
          <span><%= t "admin.word" %></span>
          <i class="glyphicon glyphicon-chevron-left pull-right"></i>
        </a>
        <ul class="treeview-menu">
          <li><%= link_to t(:index), admin_words_path %></li>
          <li><%= link_to t(:create), new_admin_word_path %></li>
        </ul>
      </li>
    </ul>
  </section>
</aside>
