<div id="signupbox" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
  <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title"><h1><strong><%= t :sign_up %></strong></h1></div>
      <div id="signin-button">
        <% unless controller_name == "sessions" %>
          <%= link_to t("sessions.new.title"), new_session_path(resource_name) %><br/>
        <% end %>
      </div>
    </div>
    <div class="panel-body">
      <%= form_for resource, as: resource_name,
        url: registration_path(resource_name),
        html: {class: "form-horizontal", role: "form"} do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :name, class: "col-md-2 control-label" %>
          <div class="col-md-9">
            <%= f.text_field :name, autofocus: true, class: "form-control",
              placeholder: t("users.name") %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, class: "col-md-2 control-label" %>
          <div class="col-md-9">
            <%= f.email_field :email, autofocus: true, class: "form-control",
              placeholder: t("users.email") %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password, class: "col-md-2 control-label", id: "pw-field" %>
          <div class="col-md-9">
            <% if @minimum_password_length %>
              <em class="small">
                <%= t "characters_minimum", number: @minimum_password_length %>
              </em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off",
              class: "form-control signup", placeholder: t("signup.password") %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, class: "col-md-2 control-label" %>
          <div class="col-md-9">
            <%= f.password_field :password_confirmation, autocomplete: "off",
              class: "form-control signup", placeholder: t("signup.confirmation") %>
          </div>
        </div>
        <div class="form-group">
          <div class="col-md-offset-4 col-md-9">
            <%= f.submit t(:sign_up), class: "btn btn-info signup-sbtn" %>
          </div>
        </div>
        <div id="social-signup" class="form-group">
          <div class="col-md-12">
            <span class="signup-sbtn"><%= t "signup.or" %></span>
            <% if devise_mapping.omniauthable? %>
              <% resource_class.omniauth_providers.each do |provider| %>
                <%= link_to omniauth_authorize_path(resource_name, provider),
                  class: "btn btn-primary signup-sbtn" do %>
                  <i class="fa fa-<%= provider %>"></i>
                  <%= t "signup.with", provider: provider %>
                <% end %>
              <% end %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
