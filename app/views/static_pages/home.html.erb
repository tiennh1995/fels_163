<% unless user_signed_in? %>
  <div class="center jumbotron">
    <h1><%= t "static_pages.home.signup" %></h1>
    <%= link_to t(:sign_up_now), new_user_registration_path,
      class: "btn btn-lg btn-primary" %>
  </div>
<% else %>
  <div class="col-md-4">
    <h1><%= t("activities.title") %></h1>
    <%= render @activities %>
    <%= link_to t("activities.all"), user_activities_path(current_user),
      class: "btn btn-primary form-control" %>
  </div>
<% end %>
