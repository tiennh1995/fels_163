<% if can? :read, @word %>
  <div class="row">
    <div class="col-md-6">
      <div class="panel panel-default text-center">
        <div id="word_<%= @word.id %>">
          <div class="panel-body">
            <%= render @word %>
          </div>
        </div>
        <div class="panel-body" id="answers_<%= @word.id %>">
          <ul>
            <%= render "shared/word_answers", answers: @word.answers %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>
